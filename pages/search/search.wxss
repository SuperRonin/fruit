.border-color{
  border: 1px solid orange!important;
}
.search-box{
  margin-top: 50rpx;
}
.search-box,.hot-word{
  width: 90%;
  margin: 0 auto;
}
.search-box input{
  border: 1px solid #ccc;
  border-radius: 100rpx;
  padding: 5rpx 10rpx;
  padding-left: 20rpx;
}

.hot-word{
  margin-top: 30rpx;
}
.hot-tit{
  font-size: 25rpx;
}
.hot-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 15rpx;
}
.hot-list text{
  margin: 10rpx;
  padding: 8rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.search-result-shop{
  position: relative;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-bottom: 1px solid #eee;
}
.search-result-shop .shop-img{
  width: 30%;
  height: 120rpx;
}
.shop-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.shop-price{
  align-items: flex-end;
}
.addNum{
  position: absolute;
  right: 5%;
  top: 50%;
  margin-top: -25rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  background-color: orange;
}
